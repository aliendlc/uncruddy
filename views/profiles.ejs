<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <% include ./partials/head.ejs %>
  </head>
  <header>
    <h1>Coffee Brain</h1>
    <img src = "coffee-brain.png" alt="Not Availle" style= "width: 15em"><br/><br/>
  </header>
  <body style="align-text:center width:100%">
    <div class="head">
        <a href="/profiles/new" class="waves-effect waves-light btn">Log a Cup</a><br/><br/>
        <a href="/profiles/newRoast" class="waves-effect waves-light btn">Log a Roast</a><br/><br/>
    </div>
    <div class="baristas">
      <h3>
          Baristas
      </h3>
      <h4>
          Cup Profiles
      </h4>
      <% for(let i = 0; i < profile.length; i++){ %>
          <a href="/profiles/<%=profile[i].id%>"><%=profile[i].origin%> : <%=profile[i].date%>
      <% } %>
          </a>
    </div>
    <div class="roasters">
      <h3>
          Roasters
      </h3>
      <h4>
          Roast Profiles
      </h4>
      <% for(let i = 0; i < profile.length; i++){ %>
          <a href="/profiles/<%=roast[i].id%>"><%=roast[i].origin%> : <%=roast[i].date%>
      <% } %>
          </a>
    </div>
  </body>
</html>
